[Unit]
Description=Monero Full Node
After=network.target

[Service]
User=monero
Group=monero
WorkingDirectory=~

Type=forking
PIDFile=/var/run/monero/monerod.pid
ExecStartPre=/usr/bin/install -o monero -g monero -d /var/run/monero
ExecStart=/usr/bin/monerod --config-file /etc/monerod.conf \
    --detach --pidfile /var/run/monero/monerod.pid

[Install]
WantedBy=multi-user.target
